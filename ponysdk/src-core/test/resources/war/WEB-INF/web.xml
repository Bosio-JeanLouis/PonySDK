<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	
	<servlet>
		<servlet-name>PonyEngineServlet</servlet-name>
		<servlet-class>com.ponysdk.core.PonyEngineServiceImpl</servlet-class>
		<init-param>
			<param-name>entryPoint</param-name>
			<param-value>com.ponysdk.test.UiBuilderTestEntryPoint</param-value>
		</init-param>
		<load-on-startup>0</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>StreamServiceServlet</servlet-name>
		<servlet-class>com.ponysdk.core.StreamServiceServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>PonyBootstrapServlet</servlet-name>
		<servlet-class>com.ponysdk.core.PonyBootstrapServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>PonyEngineServlet</servlet-name>
		<url-pattern>/ponyterminal/p</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>StreamServiceServlet</servlet-name>
		<url-pattern>/ponyterminal/stream</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>PonyBootstrapServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	
</web-app>